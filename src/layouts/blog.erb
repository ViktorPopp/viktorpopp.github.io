<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title><%= [(["Viktor", "Viktor Popp"].include?(current_page.data.title) ? nil : current_page.data.title), "Viktor Popp"].compact.uniq.join(" | ") %></title>

    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>">
    <div class="container">
      <% unless page_classes == "index" %>
        <nav aria-label="breadcrumb" role="navigation">
          <%= breadcrumbs(current_page) %>
          (<%= current_article.date.strftime("%Y-%m-%d") %>)
        </nav>
      <% end %>

      <article>
        <%= yield %>

        <p>Tags: <%= current_article.tags.map { |tag| link_to tag, tag_path(tag) }.join(", ") %></p>
      </article>

      <aside>
        <h2>Recent Articles</h2>
        <ul>
          <% blog.articles[0...5].each do |article| %>
            <li><%= link_to article.title, article %> (<%= article.date.strftime("%Y-%m-%d") %>)</li>
          <% end %>
        </ul>
      </aside>
    </div>
  </body>
</html>